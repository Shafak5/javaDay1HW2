package sayiBulma;

public class Main {

	public static void main(String[] args) {
		int[] sayilar = new int[] {1,2,5,7,9,0};
		int aranacak = 6;
		boolean varMi = false;
		
		for(int sayi : sayilar) {
			if(sayi == aranacak) {
				varMi = true;
				System.out.println("dizide var :" + sayi);
			}else {
				System.out.println("dizide yok :"+ sayi);
			}
			break;
		}
		if(varMi) {
			System.out.println("sayi mevcut");
		}else {
			System.out.println("sayi mevcut deÄŸil");
		}

	}

}
